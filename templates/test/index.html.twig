{% extends 'base.html.twig' %}

{% block title %}upload one file{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div id="uploadonefile" class="container">
    <h2 class="text-center">
        Uploader une image
    </h2>
    {{ form_start(formtest,{'attr':{'id':'formlogo','class':'row justify-content-center'}}) }}
        <div class="col-md-7 mb-3">
        {{ form_row(formtest.title,{'attr':{'class':'thetitle'}}) }}
        </div>
        <div class="col-md-7 mb-3">
        {{ form_row(formtest.photo,{'attr':{'class':'thefile'}}) }}
        </div>
        <div class="col-md-7 text-center">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
    {{ form_end(formtest) }}
</div>
{% endblock %}
